<%-include('./layout/header.ejs')%>
<div class="container">
    <h1>文章列表</h1>
    <hr>
    <div class="list-group">
        <% articles.forEach(v=>{%>
        <li  class="list-group-item list-group-item-success">
            <a href="/article/info/<%= v.id%>"><%= v.title%></a>
            <span class="badge ">author</span>
            <span class="badge"><%= v.ctime%></span>
        </li>
        <% })%>
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="<%= nowpage==1?'disabled':''%>">
                <<%= nowpage==1?'span':'a'%> href="?page=<%= nowpage==1?1:(nowpage-1)%>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </<%= nowpage==1?'span':'a'%>>
            </li>
            <% for(var i=1;i<=totalpage;i++){ %>
                <li class="<%= nowpage == i? 'active':''%>"><a href="?page=<%= i%>"><%= i%></a></li>
            <% }%>
            <li class="<%= nowpage==totalpage?'disabled':''%>">
                <<%= nowpage==totalpage?'span':'a'%> href="?page=<%= nowpage==totalpage?nowpage:(nowpage+1)%>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </<%= nowpage==totalpage?'span':'a'%>>
            </li>
        </ul>
    </nav>
</div>
